{
  "compilerOptions": {
    "baseUrl": "../app",
    "outDir": "../public/",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "strict": false,
    "allowJs": true,
    "checkJs": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "esModuleInterop": true,
    "noImplicitAny": false
  },
  "include": [
    "../app/**/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "files": [
    "../app/scripts/index.tsx"
  ]
}